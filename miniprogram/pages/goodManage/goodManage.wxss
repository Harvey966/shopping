.good-manage{
  height: 100vh;
  background-color: rgb(230, 230, 230);
}
.title{
  text-align: center;
  padding: 20rpx 0;
}
.order-item{
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  position: relative;
}
.status{
  padding-bottom: 10rpx;
  font-size: 30rpx;
  right: 40rpx;
  position: absolute;
  color: rgb(245, 175, 44);
}
.content{
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}

.icon{
  width: 150rpx;
  height: 150rpx;
}
.money{
  font-size: 35rpx;
  text-align: right;
}
.total{
  text-align: right;
  font-weight: 700;
}
.pay{
  width: 150rpx !important;
  font-size: 35rpx;
  padding: 10rpx;
  
  margin: 10rpx 0;
  color: rgb(243, 146, 66);
  border: 1rpx solid rgb(243, 146, 66);
}
.add-btn{
  width: 150rpx !important;
  height: 80rpx;
  position: sticky;
  bottom: 40rpx;
  left: 325rpx;
  padding: 10rpx 20rpx;
  margin: 0 !important;
  background-color: orange;
  box-shadow: 0px 5px 5px #888888;
}
