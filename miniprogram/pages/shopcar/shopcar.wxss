
.car-container{
  height: 100vh;
  background-color: rgb(240, 239, 236);
}

.container{
  width: 712rpx;
  display: flex;
  justify-content: space-between;
  margin: 0rpx 19rpx 19rpx 19rpx;
  padding: 40rpx 20rpx 40rpx 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-sizing: border-box;
}
image{
  width: 150rpx;
  height: 150rpx;
}
.content{
  display: flex;
}
.right{
  display: flex;
  margin-top: 40rpx;
}
.reduce{
  margin-right: 40rpx;

}
.add{
  margin-left: 40rpx;
}


.type{
  width:40rpx;
  height: 40rpx;
  background-color: #ebe7e7;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
.left-icon{
  width: 40rpx;
  height: 40rpx;
  background-repeat: no-repeat;
  background-position: center 0;
  background-size: cover;
  margin-top: 40rpx;
}
.total-icon{
  width: 40rpx;
  height: 40rpx;
  background-repeat: no-repeat;
  background-position: center 0;
  background-size: cover;
  margin-top: 40rpx;
}

.inner{
  margin-left: 10rpx;
}

.one-price{
  margin-top: 10rpx;
  font-size: 40rpx;
  color: rgb(255, 136, 0);
}
.chahao{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 20rpx;
  top: 10rpx;
}

.buy-bottom{
  background-color: #ffffff;
  position: absolute;
  bottom: 0;
  border-top: rgb(235, 232, 232) 3.7rpx solid;
  display: flex;
  width: 100%;
  padding: 15rpx;
  display: flex;
  justify-content: space-between;
}

.buy-button{
  color: #ffffff;
  width: 120rpx;
  border-radius: 20rpx;
  background-color: #ee722a;
  text-align: center;
  padding: 20rpx;
  margin-right: 40rpx;
}
.buy-content{
  margin-top: 12rpx;
}
.total-money{
  color: #eb6517;
}