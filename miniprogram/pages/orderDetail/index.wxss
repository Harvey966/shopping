.summit-order {
  background-color: #F7F7F7;
  height: 100vh;
  padding-top: 20rpx;
}
.summit-order .order-container {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  padding-bottom: 400rpx;
}
.summit-order .order-container .title {
  font-weight: 500;
  font-size: 35rpx;
}
.summit-order .order-container .wait {
  font-size: 30rpx;
  font-weight: 300;
}
.summit-order .order-container .catch-num {
  margin-top: 10rpx;
  font-size: 55rpx;
  font-weight: 600;
}
.summit-order .order-container .catch-num-word {
  font-size: 30rpx;
  font-weight: 300;
}
.summit-order .order-container .button-container {
  display: flex;
  margin-top: 40rpx;
}
.summit-order .order-container .button-container button {
  width: 160rpx;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
}
.summit-order .order-container .button-container button:first-child {
  background-color: #FFFFFF;
  color: #717171;
  border: 1px solid #e6e6e6;
  margin-right: 10rpx;
}
.summit-order .order-container .button-container button:last-child {
  background-color: #E73B2A;
  color: #FEF1E8;
}
.summit-order .box-container {
  width: 93%;
  margin: 20rpx auto;
  background-color: #ffffff;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 20rpx;
}
.summit-order .box-container .box-title {
  font-size: 35rpx;
  border-bottom: 1rpx solid #F1F1F1;
  padding-bottom: 20rpx;
}
.summit-order .user-info {
  margin-top: 0px;
}
.summit-order .user-info .title {
  font-size: 28rpx;
}
.summit-order .user-info .box {
  border-bottom: 1rpx solid #F1F1F1;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
}
.summit-order .user-info .address {
  display: block;
}
.summit-order .user-info .address .title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.summit-order .user-info .address .title-container .title {
  font-size: 40rpx;
}
.summit-order .user-info .address .title-container .title::before {
  content: "送餐地址";
  background-color: #ee5a46;
  color: #fff;
  font-size: 25rpx;
  padding: 2rpx 5rpx;
  margin-right: 5rpx;
}
.summit-order .user-info .address .title-container .right {
  color: #B9B9B9;
}
.summit-order .user-info .address .name-container {
  display: flex;
  color: #BEBDBD;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 300;
}
.summit-order .user-info .address .name-container .name {
  margin-right: 20rpx;
}
.summit-order .user-info .phone .title {
  font-size: 28rpx;
}
.summit-order .user-info .phone .detail input {
  width: 240rpx;
}
.summit-order .user-info .way {
  display: flex;
}
.summit-order .user-info .way .title {
  color: #D0483E;
}
.summit-order .user-info .way .detail {
  width: 240rpx;
}
.summit-order .user-info .box .title {
  font-size: 28rpx;
  color: #A2A1A2;
}
.summit-order .user-info .box .detail {
  font-size: 28rpx;
  color: #393939;
}
.summit-order .goods-container .goods {
  display: flex;
  justify-content: space-between;
  margin-bottom: 35rpx;
  margin-top: 20rpx;
}
.summit-order .goods-container .goods image {
  width: 102rpx;
  height: 102rpx;
}
.summit-order .goods-container .goods .detail-container {
  display: flex;
}
.summit-order .goods-container .goods .detail {
  margin-left: 25rpx;
}
.summit-order .goods-container .goods .detail .title {
  font-size: 30rpx;
  font-weight: 500;
}
.summit-order .goods-container .goods .detail .shorthand {
  font-size: 20rpx;
  color: #828282;
  font-weight: 300;
}
.summit-order .goods-container .goods .detail .count {
  font-size: 25rpx;
  color: #B20000;
  font-weight: 400;
}
.summit-order .goods-container .goods .price {
  color: #D20000;
  font-weight: 400;
  font-size: 30rpx;
}
.summit-order .goods-container .goods:nth-last-child(2) {
  padding-bottom: 30rpx;
  border-bottom: 1px solid #F6F6F6;
}
.summit-order .goods-container .total-price {
  display: flex;
  justify-content: flex-end;
  margin-right: 35rpx;
}
.summit-order .goods-container .total-price .price {
  font-size: 40rpx;
}
.summit-order .goods-container .total-price .price::before {
  content: '合计 ¥ ';
  font-size: 30rpx;
  font-weight: 350;
}
.summit-order .note {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.summit-order .note .message {
  color: #A4A4A4;
  margin-right: 10rpx;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: end;
}
.summit-order .note .high-message {
  color: #3d3d3d;
  margin-right: 10rpx;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: end;
}
.summit-order .placeholder {
  width: 100%;
  height: 200rpx;
  background-color: #F7F7F7;
}
