<!--index.wxml-->
<view class="container">
  <swiper indicator-dots="ture"
        autoplay="false" interval="2000" duration="500">
        <block wx:for="{{image}}"  wx:key="*this" >
          <swiper-item bindtap="clickImg" data-index="{{index}}">
            <image src="{{item}}" class="swiper-image"></image>
          </swiper-item>
      </block>
  </swiper>

  <view class="title">
    <text >商品推荐</text>
  </view>
  <view class="goods-container">
    <view 
      class="goods_item" 
      bindtap="linkToGoods" 
      wx:for="{{goods}}" 
      data-index="{{index}}"
      wx:key="index"
    >
      <image src="https://g-search1.alicdn.com/img/bao/uploaded/i4/imgextra/i4/560760057/O1CN01kdjCn81CI9G25a1rC_!!0-saturn_solar.jpg_360x360Q90.jpg_.webp"></image>
      <text>{{item.title}}</text>
      <text class="goods_pirce">￥ {{item.now_price}}</text>
    </view>
  </view>

</view>
