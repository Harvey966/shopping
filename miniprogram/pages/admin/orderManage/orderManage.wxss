.order-manage{
  height: 100%;
  min-height: 100vh;
  background-color: rgb(230, 230, 230);
  font-size: 35rpx;
  position: relative;
}
.nav-container{
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ccc;
  position: sticky;
  top: 0rpx;
  height: 80rpx;
  z-index: 10;
  background-color: rgb(230, 230, 230);
}
.nav-item{
  padding-bottom: 30rpx;
}
.orangeStyle{
  color:orange;
  border-bottom: 3px solid orange;
}
.order-item{
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  position: relative;
}
.header{
  display: flex;
  justify-content: space-between;
}
.status{
  padding-bottom: 10rpx;
  font-size: 30rpx;
  right: 40rpx;
  position: absolute;
  color: rgb(245, 175, 44);
}
.content{
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}

.icon{
  width: 150rpx;
  height: 150rpx;
}
.money{
  font-size: 35rpx;
  text-align: right;
}
.total{
  text-align: right;
  font-weight: 700;
}
.info{
  width: 80%;
  margin: 0 auto;
}
button{
  border: 1rpx solid orange;
  color: orange;
}
.mask{
  width:100%;
  height:100%;
  position:absolute;
  background-color:#999;
  z-index:99;
  top:0;
  left:0;
  opacity:0.5;
}
.mask-container{
  position: fixed;
  left: 20%;
  top: 20%;
  background-color: #fff;
  padding: 20rpx;
  z-index:100;
  border-radius: 10rpx;
}
.radio-container{
  display: flex;
  flex-direction: column;
  width: 60%;
  margin: 0 auto;
  z-index: 100;
}
.radio-item{
  margin:20rpx 0;
}
.money{
  font-weight: 400;
  font-size: 30rpx;
}
.time{
  font-weight: 400;
  font-size: 30rpx;
}