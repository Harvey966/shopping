.order-list{
  height: 100%;
  background-color: rgb(230, 230, 230);
  font-size: 35rpx;
}
.nav-container{
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ccc;
  position: sticky;
  top: 0rpx;
  height: 80rpx;
  z-index: 10;
  background-color: rgb(230, 230, 230);
}
.nav-item{
  padding-bottom: 30rpx;
}
.orangeStyle{
  color:orange;
  border-bottom: 3px solid orange;
}
.order-item{
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  position: relative;
}
.status{
  padding-bottom: 10rpx;
  font-size: 30rpx;
  right: 40rpx;
  position: absolute;
  color: rgb(245, 175, 44);
}
.content{
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}

.icon{
  width: 150rpx;
  height: 150rpx;
}
.money{
  font-size: 35rpx;
  text-align: right;
}
.total{
  text-align: right;
  font-weight: 700;
}
.pay{
  width: 150rpx !important;
  font-size: 35rpx;
  padding: 10rpx;
  
  margin: 10rpx 0;
  color: rgb(243, 146, 66);
  border: 1rpx solid rgb(243, 146, 66);
}